                    <p>‚Ä¢ +{progressData.predictedCloseDate}: <strong className="text-green-600">Won!</strong></p>
                  </div>
                </div>
              </section>

              {/* Current Stage Qualifications */}
              <section>
                <h3 className="text-lg font-bold text-gray-900 mb-3">Current Stage Requirements</h3>
                <div className="bg-white border border-gray-200 rounded-xl p-4 space-y-2">
                  {progressData.stageQualifications.current.map((qual, idx) => (
                    <div key={idx} className="flex items-center gap-3">
                      {qual.met ? (
                        <CheckCircle2 className="size-5 text-green-600 flex-shrink-0" />
                      ) : (
                        <AlertCircle className="size-5 text-amber-600 flex-shrink-0" />
                      )}
                      <span className={`text-sm ${qual.met ? 'text-gray-700' : 'text-gray-500'}`}>
                        {qual.text}
                      </span>
                    </div>
                  ))}
                </div>
              </section>

              {/* Next Stage Requirements */}
              <section>
                <h3 className="text-lg font-bold text-gray-900 mb-3 flex items-center gap-2">
                  Next Stage: {progressData.predictedNextStage}
                  <ArrowRight className="size-5 text-blue-600" />
                </h3>
                <div className="bg-white border border-gray-200 rounded-xl p-4 space-y-2">
                  {progressData.stageQualifications.next.map((qual, idx) => (
                    <div key={idx} className="flex items-center gap-3">
                      {qual.met ? (
                        <CheckCircle2 className="size-5 text-green-600 flex-shrink-0" />
                      ) : (
                        <AlertCircle className="size-5 text-gray-400 flex-shrink-0" />
                      )}
                      <span className={`text-sm ${qual.met ? 'text-gray-700' : 'text-gray-500'}`}>
                        {qual.text}
                      </span>
                    </div>
                  ))}
                </div>
                <div className="mt-4 bg-blue-50 border border-blue-200 rounded-xl p-4">
                  <p className="text-sm text-blue-900">
                    <strong>üí° What to do:</strong> Focus on getting a reply to move to {progressData.predictedNextStage}. AI recommends sending a compelling follow-up question tonight at 6-8 PM.
                  </p>
                </div>
              </section>
            </div>
          )}
        </div>

        {/* Footer */}
        <div className="border-t border-gray-200 p-4 bg-gray-50 flex items-center justify-between">
          <div className="text-sm text-gray-600">
            Last updated: <span className="font-semibold">Just now</span>
          </div>
          <div className="flex gap-2">
            <button
              onClick={onClose}
              className="px-4 py-2 border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors font-semibold"
            >
              Close
            </button>
            <button className="px-6 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:shadow-lg transition-all font-semibold">
              Take Action ‚Üí
            </button>
          </div>
        </div>
      </div>
    </div>
  );
}

